{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NewsData",
  "type": "object",
  "required": ["lastUpdated", "news"],
  "properties": {
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 format timestamp"
    },
    "news": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/NewsArticle"
      }
    }
  },
  "definitions": {
    "NewsArticle": {
      "type": "object",
      "required": ["id", "title", "url", "sourceName", "category", "publishedAt", "summary", "importance"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^\\d{8}-\\d{3}$",
          "description": "Format: YYYYMMDD-NNN"
        },
        "title": {
          "type": "string",
          "minLength": 1
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "sourceName": {
          "type": "string",
          "minLength": 1
        },
        "category": {
          "type": "string",
          "enum": ["Model", "Service", "Other"]
        },
        "publishedAt": {
          "type": "string",
          "format": "date-time"
        },
        "summary": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200
        },
        "importance": {
          "type": "string",
          "enum": ["high", "normal"]
        }
      }
    }
  }
}
